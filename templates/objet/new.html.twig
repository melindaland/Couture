{% extends 'base.html.twig' %}

{% block title %}Nouvel Objet{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/objet.css') }}">
{% endblock %}

{% block body %}
    <section class="objet-section my-5 py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="form-container shadow-sm rounded bg-light">
                        <div class="form-header text-center bg-jaune py-3">
                            <h3>Ajouter un Objet</h3>
                        </div>
                        <div class="form-body p-4">
                            <p class="text-muted mb-4">Veuillez remplir le formulaire ci-dessous pour ajouter un nouvel objet à la liste.</p>
                            {{ include('objet/_form.html.twig') }}
                            <div class="text-center mt-4">
                                <a href="{{ path('app_objet_index') }}" class="textsm">
                                    <i class="bi bi-arrow-left-circle"></i> Retour à la liste des objets
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
